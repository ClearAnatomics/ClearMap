def make_ext(modname, pyxfilename):
    import numpy as np
    from distutils.extension import Extension
    
    ext = Extension(name = modname,
        sources = [pyxfilename],
        include_dirs = [np.get_include()],
        extra_compile_args = ["-O3", "-march=native", "-fopenmp"],
        extra_link_args = ['-fopenmp'])
    
    return ext
